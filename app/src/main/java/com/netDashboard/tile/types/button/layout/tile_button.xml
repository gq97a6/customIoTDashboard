<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/tile_padding"
    android:tag="item">

    <View
        android:id="@+id/ripple_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/background_ripple"
        android:elevation="20dp"
        android:tag="ripple_foreground"
        android:visibility="gone" />

    <View
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#00000000"
        android:elevation="20dp"
        android:tag="foreground" />

    <Button
        android:id="@+id/tb_button"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingTop="15dp"
        android:paddingRight="6dp"
        android:paddingBottom="15dp"
        android:tag="tile_button"
        android:text="@string/tb_default_text"
        android:textColor="#FFFFFF"
        app:autoSizeMaxTextSize="25dp"
        app:autoSizeMinTextSize="8dp"
        app:autoSizeStepGranularity="1dp"
        app:autoSizeTextType="uniform" />

</FrameLayout>