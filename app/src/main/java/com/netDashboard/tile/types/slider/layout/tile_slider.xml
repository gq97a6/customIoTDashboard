<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="10dp"
    android:padding="@dimen/tile_padding">

    <View
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/background_ripple"
        android:elevation="20dp"
        android:tag="foreground"
        tools:ignore="ContentDescription,DuplicateIncludedIds" />

    <View
        android:id="@+id/flag_mark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:visibility="gone"
        tools:ignore="ContentDescription,DuplicateIncludedIds" />

    <View
        android:id="@+id/flag_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:visibility="gone"
        tools:ignore="ContentDescription,DuplicateIncludedIds" />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:tag="colorB"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/ts_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:tag="color"
        android:text="123"
        android:textColor="#FFFFFF"
        app:autoSizeMaxTextSize="25dp"
        app:autoSizeMinTextSize="8dp"
        app:autoSizeStepGranularity="1dp"
        app:autoSizeTextType="uniform"
        tools:ignore="HardcodedText" />

</FrameLayout>