<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav">

    <activity
        android:id="@+id/splashScreenActivity"
        android:name="com.netDashboard.activities.SplashScreenActivity"
        android:label="activity_splash_screen"
        tools:layout="@layout/activity_splash_screen" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.netDashboard.activities.MainActivity"
        tools:layout="@layout/fragment_toolbar" />
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.netDashboard.activities.fragments.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_tileNewFragment"
            app:destination="@id/tileNewFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_tilePropertiesFragment"
            app:destination="@id/tilePropertiesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_pop"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.netDashboard.activities.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_pop"
            app:popUpTo="@id/settingsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dashboardNewFragment"
        android:name="com.netDashboard.activities.fragments.DashboardNewFragment"
        android:label="fragment_dashboard_new"
        tools:layout="@layout/fragment_dashboard_new">
        <action
            android:id="@+id/action_dashboardNewFragment_pop"
            app:popUpTo="@id/dashboardNewFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dashboardPropertiesFragment"
        android:name="com.netDashboard.activities.fragments.DashboardPropertiesFragment"
        android:label="fragment_dashboard_properties"
        tools:layout="@layout/fragment_dashboard_properties">
        <action
            android:id="@+id/action_dashboardPropertiesFragment_pop"
            app:popUpTo="@id/dashboardPropertiesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/tilePropertiesFragment"
        android:name="com.netDashboard.activities.fragments.TilePropertiesFragment"
        android:label="fragment_tile_properties"
        tools:layout="@layout/fragment_tile_properties">
        <action
            android:id="@+id/action_tilePropertiesFragment_to_tileIconFragment"
            app:destination="@id/tileIconFragment" />
        <action
            android:id="@+id/action_tilePropertiesFragment_pop2"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/tilePropertiesFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="index"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/tileIconFragment"
        android:name="com.netDashboard.activities.fragments.TileIconFragment"
        android:label="TileIconFragment">
        <action
            android:id="@+id/action_tileIconFragment_pop"
            app:popUpTo="@id/tileIconFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/tileNewFragment"
        android:name="com.netDashboard.activities.fragments.TileNewFragment"
        android:label="fragment_tile_new"
        tools:layout="@layout/fragment_tile_new">
        <action
            android:id="@+id/action_tileNewFragment_to_tilePropertiesFragment"
            app:destination="@id/tilePropertiesFragment" />
        <action
            android:id="@+id/action_tileNewFragment_pop"
            app:popUpTo="@id/tileNewFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/themeFragment"
        android:name="com.netDashboard.activities.fragments.ThemeFragment"
        android:label="fragment_theme"
        tools:layout="@layout/fragment_theme">
        <action
            android:id="@+id/action_themeFragment_pop"
            app:popUpTo="@id/themeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.netDashboard.activities.fragments.MainScreenFragment"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/action_mainFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_themeFragment"
            app:destination="@id/themeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dashboardPropertiesFragment"
            app:destination="@id/dashboardPropertiesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dashboardNewFragment"
            app:destination="@id/dashboardNewFragment" />
    </fragment>


</navigation>