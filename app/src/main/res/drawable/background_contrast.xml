<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bc_background">
        <shape android:shape="rectangle">
            <solid android:color="#54FF0000" />
        </shape>
    </item>
    <item android:id="@+id/bc_top">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
    <item android:id="@+id/bc_bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#00000000"
                android:startColor="#FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>