<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="background"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/d_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/d_log_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_frame"
            android:paddingStart="5dp"
            android:tag="log"
            app:layout_constraintBottom_toTopOf="@+id/d_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/d_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="colorB"
            android:text="Pull down to clear"
            android:textColor="#A3A3A3"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/d_lock"
        style="@style/button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_locked"
        android:tag="color"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_log" />

    <Button
        android:id="@+id/d_properties"
        style="@style/button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_more"
        android:tag="color"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_log" />

    <TextView
        android:id="@+id/d_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:tag="colorA"
        android:text="EXAMPLE"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/d_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/d_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:tag="colorB"
        android:text="@string/d_disconnected"
        android:textColor="@color/gray65"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@id/d_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/d_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="@dimen/tile_padding"
        android:paddingTop="@dimen/tile_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_log" />

    <TextView
        android:id="@+id/d_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:gravity="center"
        android:tag="colorC"
        android:text="@string/d_empty"
        android:textColor="#A3A3A3"
        android:textSize="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/d_recycler_view"
        app:layout_constraintTop_toTopOf="@id/d_recycler_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/d_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintWidth_percent=".8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_bar"
            android:tag="bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">


            <Button
                android:id="@+id/d_add"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_add"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/d_remove"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/d_remove"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_trashcan"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/d_swap"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toEndOf="@+id/d_add"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/d_swap"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_swap"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/d_edit"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toEndOf="@+id/d_remove"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/d_edit"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_edit"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toEndOf="@+id/d_swap"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>