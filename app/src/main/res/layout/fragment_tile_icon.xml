<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.TileIconFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/tc_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ti_recycler_view_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/tile_padding"
                android:paddingTop="@dimen/tile_padding"
                app:layout_constraintTop_toBottomOf="@id/view11" />

            <LinearLayout
                android:id="@+id/ti_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/ti_recycler_view_colors">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/textView2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="colorB"
                        android:text="@string/tp_design_hue"
                        android:textColor="@color/gray100"
                        android:textSize="12dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/ti_hue"
                        style="@style/slider"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:tag="enabled"
                        android:value="180"
                        android:valueFrom="0"
                        android:valueTo="360" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="colorB"
                        android:text="@string/tp_design_saturation"
                        android:textColor="@color/gray100"
                        android:textSize="12dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/ti_saturation"
                        style="@style/slider"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:tag="enabled"
                        android:value="0.01"
                        android:valueFrom="0"
                        android:valueTo="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ti_val_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="colorB"
                        android:text="@string/tp_design_value"
                        android:textColor="@color/gray100"
                        android:textSize="12dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/ti_value"
                        style="@style/slider"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:tag="enabled"
                        android:value="0.01"
                        android:valueFrom="0"
                        android:valueTo="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ti_color">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:tag="color"
                    android:text="Icons type:"
                    android:textSize="25dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/ti_icon_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:checkedChip="@id/ti_line"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/ti_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:state_checked="true"
                        android:tag="colorA"
                        android:text="line"
                        android:textSize="20dp"
                        app:checkedIcon="@null" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/ti_thin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:tag="colorA"
                        android:text="thin"
                        android:textSize="20dp"
                        app:checkedIcon="@null" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/ti_solid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:tag="colorA"
                        android:text="solid"
                        android:textSize="20dp"
                        app:checkedIcon="@null" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ti_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="@dimen/tile_padding"
                android:paddingTop="@dimen/tile_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:tag="background"
        app:layout_constraintBottom_toBottomOf="@+id/ti_icon_frame"
        app:layout_constraintEnd_toEndOf="@+id/ti_icon_frame"
        app:layout_constraintStart_toStartOf="@+id/ti_icon_frame"
        app:layout_constraintTop_toTopOf="@+id/ti_icon_frame" />

    <View
        android:id="@+id/ti_icon_frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_frame"
        android:tag="frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ti_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="13dp"
        android:background="@drawable/icon_swap"
        android:tag="colorIcon"
        app:layout_constraintBottom_toBottomOf="@+id/ti_icon_frame"
        app:layout_constraintEnd_toEndOf="@+id/ti_icon_frame"
        app:layout_constraintStart_toStartOf="@+id/ti_icon_frame"
        app:layout_constraintTop_toTopOf="@+id/ti_icon_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>