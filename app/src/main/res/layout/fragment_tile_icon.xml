<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.TileIconFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ti_recycler_view_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/tile_padding"
                android:paddingTop="@dimen/tile_padding"
                app:layout_constraintTop_toBottomOf="@id/view11" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ti_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/tile_padding"
                android:paddingTop="@dimen/tile_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:tag="color"
                android:text="Icons type:"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/ti_icon_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ti_recycler_view_colors" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/ti_icon_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:checkedChip="@id/ti_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/ti_recycler_view_colors"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/ti_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:state_checked="true"
                    android:tag="colorA"
                    android:text="line"
                    android:textSize="20dp"
                    app:checkedIcon="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ti_thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:tag="colorA"
                    android:text="thin"
                    android:textSize="20dp"
                    app:checkedIcon="@null" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/ti_solid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:tag="colorA"
                    android:text="solid"
                    android:textSize="20dp"
                    app:checkedIcon="@null" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:tag="background"
        app:layout_constraintBottom_toBottomOf="@+id/ti_icon_frame"
        app:layout_constraintEnd_toEndOf="@+id/ti_icon_frame"
        app:layout_constraintStart_toStartOf="@+id/ti_icon_frame"
        app:layout_constraintTop_toTopOf="@+id/ti_icon_frame"/>

    <View
        android:id="@+id/ti_icon_frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_frame"
        android:tag="frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ti_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="13dp"
        android:background="@drawable/icon_swap"
        android:tag="colorIcon"
        app:layout_constraintBottom_toBottomOf="@+id/ti_icon_frame"
        app:layout_constraintEnd_toEndOf="@+id/ti_icon_frame"
        app:layout_constraintStart_toStartOf="@+id/ti_icon_frame"
        app:layout_constraintTop_toTopOf="@+id/ti_icon_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>