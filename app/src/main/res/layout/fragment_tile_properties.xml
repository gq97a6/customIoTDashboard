<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activities.fragments.TilePropertiesFragment">

    <TextView
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="color"
        android:text="Tile properties"
        android:textColor="@color/black"
        android:textSize="45dp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_frame"
        android:tag="frame"
        app:layout_constraintBottom_toBottomOf="@+id/tp_tag"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHeight="match_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <Button
        android:id="@+id/tp_edit_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_ripple"
        android:tag="color"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintHeight="match_constraint"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/tp_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_swap"
        android:tag="colorIcon"
        android:layout_margin="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/view11"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@+id/view11"
        app:layout_constraintStart_toStartOf="@+id/view11"
        app:layout_constraintTop_toTopOf="@+id/view11" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:tag="colorA"
        android:text="Tag"
        android:textColor="@color/gray150"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/view11"
        app:layout_constraintTop_toBottomOf="@+id/view0" />

    <EditText
        android:id="@+id/tp_tag"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#19000000"
        android:hint="empty"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="100"
        android:paddingHorizontal="10dp"
        android:tag="basic"
        android:textColor="@color/gray100"
        android:textColorHint="@color/gray65"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:ignore="HardcodedText,TextFields" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tp_tag">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tag="colorA"
                android:text="@string/p_communication"
                android:textColor="@color/gray150"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:tag="colorB"
                android:text="@string/p_mqtt"
                android:textColor="@color/gray100"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/view3"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/background_frame"
                android:orientation="vertical"
                android:padding="10dp"
                android:tag="frame"
                app:layout_constraintTop_toBottomOf="@id/view3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:tag="colorA"
                        android:text="@string/p_switch"
                        android:textColor="@color/gray150"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorC"
                            android:text="OFF"
                            android:textColor="@color/gray150"
                            android:textSize="12dp"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/tp_mqtt_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorC"
                            android:text="ON"
                            android:textColor="@color/gray150"
                            android:textSize="12dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tp_mqtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:tag="colorA"
                            android:text="Publish topic"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_mqtt_pub"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="@string/tp_topic_hint"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLength="25"
                            android:paddingHorizontal="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:tag="colorA"
                            android:text="Subscribe topic"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_mqtt_sub"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="@string/tp_topic_hint"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLength="25"
                            android:paddingHorizontal="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tp_mqtt_payload_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:tag="colorA"
                            android:text="Publish payload"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_mqtt_payload"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="@string/p_publish_value_hint"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLength="25"
                            android:padding="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tp_payload_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorB"
                            android:text="Use @value to insert current value"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tp_mqtt_payload_type_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:tag="colorA"
                            android:text="Payload setting type:"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <RadioGroup
                            android:id="@+id/tp_payload_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:checkedButton="@id/tp_mqtt_payload_val">

                            <RadioButton
                                android:id="@+id/tp_mqtt_payload_var"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tag="default"
                                android:text="Variable (set on send)"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/tp_mqtt_payload_val"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tag="default"
                                android:text="Static"
                                android:textSize="15dp" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="colorA"
                            android:text="Quality of Service (MQTT protocol):"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/tp_qos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-5dp"
                        android:checkedButton="@id/tp_qos1">

                        <RadioButton
                            android:id="@+id/tp_qos0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="default"
                            android:text="QoS 0: At most once. No guarantee."
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/tp_qos1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="default"
                            android:text="QoS 1: At least once. (Recommended)"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/tp_qos2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="default"
                            android:text="QoS 2: Delivery exactly once."
                            android:textSize="15dp" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorA"
                            android:text="@string/tp_conf_switch"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="OFF"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/tp_mqtt_confirm_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="ON"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorA"
                            android:text="@string/tp_json_switch"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="OFF"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/tp_mqtt_json_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tp_mqtt_json_payload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:tag="colorA"
                            android:text="Payload XPath"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_mqtt_json_payload_path"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="empty"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLength="25"
                            android:paddingHorizontal="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/view5">

                <TextView
                    android:id="@+id/view10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="colorA"
                    android:text="Notifications"
                    android:textColor="@color/gray150"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/background_frame"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:tag="frame"
                    app:layout_constraintTop_toBottomOf="@id/view10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorA"
                            android:text="Enable:"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="OFF"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/tp_not_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="ON"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tp_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/view9">

                <TextView
                    android:id="@+id/view6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="colorA"
                    android:text="@string/tp_tile_specific"
                    android:textColor="@color/gray150"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:tag="colorB"
                    android:text="slider"
                    android:textColor="@color/gray100"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@id/view6"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/background_frame"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:tag="frame"
                    app:layout_constraintTop_toBottomOf="@id/view6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="colorA"
                            android:text="Drag to control:"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="OFF"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/tp_slider_drag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="ON"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:tag="colorB"
                            android:text="From value"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_slider_from"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="0"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:maxLength="9"
                            android:paddingHorizontal="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:tag="colorB"
                            android:text="To value"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_slider_to"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="100"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:maxLength="9"
                            android:paddingHorizontal="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:tag="colorB"
                            android:text="Step value"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/tp_slider_step"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#19000000"
                            android:ems="100"
                            android:hint="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:maxLength="9"
                            android:paddingHorizontal="10dp"
                            android:tag="basic"
                            android:textColor="@color/gray100"
                            android:textColorHint="@color/gray65"
                            android:textCursorDrawable="@null"
                            tools:ignore="HardcodedText,TextFields" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tp_slider"
                tools:context=".activities.fragments.TilePropertiesFragment">

                <TextView
                    android:id="@+id/view7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="colorA"
                    android:text="@string/tp_tile_specific"
                    android:textColor="@color/gray150"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:tag="colorB"
                    android:text="text"
                    android:textColor="@color/gray100"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@id/view7"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/background_frame"
                    android:orientation="vertical"
                    android:padding="10dp"

                    android:tag="frame"
                    app:layout_constraintTop_toBottomOf="@id/view7">

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tp_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tp_text"
                tools:context=".activities.fragments.TilePropertiesFragment">

                <TextView
                    android:id="@+id/view8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="colorA"
                    android:text="@string/tp_tile_specific"
                    android:textColor="@color/gray150"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:tag="colorB"
                    android:text="button"
                    android:textColor="@color/gray100"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@id/view8"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/background_frame"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:tag="frame"
                    app:layout_constraintTop_toBottomOf="@id/view8">

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>