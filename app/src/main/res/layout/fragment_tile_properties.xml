<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:tag="background"
    tools:context=".activities.fragments.dashboard.tile_properties.TilePropertiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="30dp"
            android:tag="color"
            android:text="Tile properties"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp">

            <Button
                android:id="@+id/tp_edit_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/background_ripple"
                android:tag="color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHeight="match_constraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/background_frame"
                android:tag="frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHeight="match_constraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tp_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:background="@drawable/icon_swap"
                android:tag="colorIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintHeight="match_constraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintWidth="match_constraint">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:tag="colorA"
                    android:text="Tag"
                    android:textColor="@color/gray150"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/tp_tag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#19000000"
                    android:hint="empty"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="100"
                    android:paddingHorizontal="10dp"
                    android:tag="basic"
                    android:textColor="@color/gray100"
                    android:textColorHint="@color/gray65"
                    android:textCursorDrawable="@null"
                    tools:ignore="HardcodedText,TextFields" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tp_tag_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:tag="color"
            android:text="Too long, will be truncated"
            android:textColor="@color/gray150"
            android:textSize="15dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:tag="colorA"
                android:text="type:"
                android:textColor="@color/gray150"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tp_tile_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="colorB"
                android:textColor="@color/gray100"
                android:textSize="15dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:paddingHorizontal="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:tag="colorA"
                        android:text="@string/p_communication"
                        android:textColor="@color/gray150"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="colorB"
                        android:text="@string/p_mqtt"
                        android:textColor="@color/gray100"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_frame"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:tag="frame">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:tag="colorA"
                            android:text="@string/p_switch"
                            android:textColor="@color/gray150"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="OFF"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/tp_mqtt_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorC"
                                android:text="ON"
                                android:textColor="@color/gray150"
                                android:textSize="12dp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tp_mqtt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:tag="colorA"
                                android:text="Publish topic"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_mqtt_pub"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="@string/tp_topic_hint"
                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:maxLength="25"
                                android:paddingHorizontal="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:gravity="center"
                                android:tag="colorA"
                                android:text="Subscribe topic"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_mqtt_sub"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="@string/tp_topic_hint"
                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:maxLength="25"
                                android:paddingHorizontal="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tp_mqtt_payload_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:tag="colorA"
                                android:text="Publish payload"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_mqtt_payload"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="@string/p_publish_value_hint"
                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:maxLength="25"
                                android:padding="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tp_mqtt_payload_type_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center_vertical"
                                android:tag="colorA"
                                android:text="Payload setting type:"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <RadioGroup
                                android:id="@+id/tp_payload_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:checkedButton="@id/tp_mqtt_payload_val">

                                <RadioButton
                                    android:id="@+id/tp_mqtt_payload_var"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:tag="default"
                                    android:text="Variable (set on send)"
                                    android:textSize="15dp" />

                                <RadioButton
                                    android:id="@+id/tp_mqtt_payload_val"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:tag="default"
                                    android:text="Static"
                                    android:textSize="15dp" />

                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tag="colorA"
                                android:text="Quality of Service (MQTT protocol):"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/tp_qos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-5dp"
                            android:checkedButton="@id/tp_qos1">

                            <RadioButton
                                android:id="@+id/tp_qos0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tag="default"
                                android:text="QoS 0: At most once. No guarantee."
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/tp_qos1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tag="default"
                                android:text="QoS 1: At least once. (Recommended)"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/tp_qos2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tag="default"
                                android:text="QoS 2: Delivery exactly once."
                                android:textSize="15dp" />

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorA"
                                android:text="@string/tp_conf_switch"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="colorC"
                                    android:text="OFF"
                                    android:textColor="@color/gray150"
                                    android:textSize="12dp"
                                    tools:ignore="HardcodedText" />

                                <com.google.android.material.switchmaterial.SwitchMaterial
                                    android:id="@+id/tp_mqtt_confirm_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="colorC"
                                    android:text="ON"
                                    android:textColor="@color/gray150"
                                    android:textSize="12dp"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorA"
                                android:text="@string/tp_json_switch"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="colorC"
                                    android:text="OFF"
                                    android:textColor="@color/gray150"
                                    android:textSize="12dp"
                                    tools:ignore="HardcodedText" />

                                <com.google.android.material.switchmaterial.SwitchMaterial
                                    android:id="@+id/tp_mqtt_json_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="colorC"
                                    android:text="ON"
                                    android:textColor="@color/gray150"
                                    android:textSize="12dp"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tp_mqtt_json_payload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:tag="colorA"
                                android:text="Payload XPath"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_mqtt_json_payload_path"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="empty"
                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:maxLength="25"
                                android:paddingHorizontal="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tp_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:tag="colorA"
                            android:text="@string/tp_tile_specific"
                            android:textColor="@color/gray150"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:tag="colorB"
                            android:text="slider"
                            android:textColor="@color/gray100"
                            android:textSize="20dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_frame"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:tag="frame">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="colorA"
                                android:text="Drag to control:"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="colorC"
                                    android:text="OFF"
                                    android:textColor="@color/gray150"
                                    android:textSize="12dp"
                                    tools:ignore="HardcodedText" />

                                <com.google.android.material.switchmaterial.SwitchMaterial
                                    android:id="@+id/tp_slider_drag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="colorC"
                                    android:text="ON"
                                    android:textColor="@color/gray150"
                                    android:textSize="12dp"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:tag="colorB"
                                android:text="From value"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_slider_from"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="0"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:paddingHorizontal="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:tag="colorB"
                                android:text="To value"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_slider_to"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="100"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:paddingHorizontal="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:tag="colorB"
                                android:text="Step value"
                                android:textColor="@color/gray150"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/tp_slider_step"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#19000000"
                                android:ems="100"
                                android:hint="1"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:paddingHorizontal="10dp"
                                android:tag="basic"
                                android:textColor="@color/gray100"
                                android:textColorHint="@color/gray65"
                                android:textCursorDrawable="@null"
                                tools:ignore="HardcodedText,TextFields" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tp_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:tag="colorA"
                            android:text="@string/tp_tile_specific"
                            android:textColor="@color/gray150"
