<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:tag="background"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            style="@style/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_unlocked"
            android:clickable="false"
            android:duplicateParentState="true"
            android:tag="color" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            style="@style/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_more"
            android:clickable="false"
            android:duplicateParentState="true"
            android:tag="color" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        android:gravity="center|bottom"
        android:tag="colorA"
        android:text="Dashboards"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:tag="color"
            android:text="Sample test text. ABCDEFGH @#$%^*(123456)"
            android:textColor="#A3A3A3"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:tag="colorA"
            android:text="Sample test text. ABCDEFGH @#$%^*(123456)"
            android:textColor="#A3A3A3"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:tag="colorB"
            android:text="Sample test text. ABCDEFGH @#$%^*(123456)"
            android:textColor="#A3A3A3"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:tag="colorC"
            android:text="Sample test text. ABCDEFGH @#$%^*(123456)"
            android:textColor="#A3A3A3"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/text">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:tag="colorA"
            android:text="Theme color"
            android:textColor="@color/gray150"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_frame"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:tag="frame">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="colorB"
                    android:text="Dark background: "
                    android:textColor="@color/gray100"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="colorC"
                        android:text="OFF"
                        android:textColor="@color/gray150"
                        android:textSize="12dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/t_is_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="colorC"
                        android:text="ON"
                        android:textColor="@color/gray150"
                        android:textSize="12dp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="colorB"
                        android:text="@string/tp_design_hue"
                        android:textColor="@color/gray100"
                        android:textSize="12dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/t_hue"
                        style="@style/slider"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginVertical="15dp"
                        android:tag="enabled"
                        android:value="180"
                        android:valueFrom="0"
                        android:valueTo="360" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:tag="groupBar">

                <TextView
                    android:id="@+id/t_mqtt_cred_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:tag="colorB"
                    android:text="Advance color properties"
                    android:textColor="@color/gray150"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/t_advanced_arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/icon_arrow"
                    android:clickable="true"
                    android:focusable="true"
                    android:rotation="180"
                    android:tag="colorIcon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/t_advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="#00000000"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:tag="group"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:tag="colorB"
                            android:text="@string/tp_design_saturation"
                            android:textColor="@color/gray100"
                            android:textSize="12dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/t_saturation"
                            style="@style/slider"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="15dp"
                            android:tag="enabled"
                            android:value="0.01"
                            android:valueFrom="0"
                            android:valueTo="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/t_val_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:tag="colorB"
                            android:text="@string/tp_design_value"
                            android:textColor="@color/gray100"
                            android:textSize="12dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/t_value"
                            style="@style/slider"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginVertical="15dp"
                            android:tag="enabled"
                            android:value="0.01"
                            android:valueFrom="0"
                            android:valueTo="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/t_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationY="-100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintWidth_percent=".8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_bar"
            android:tag="bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <Button
                android:id="@+id/b0"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_add"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/b1"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/b1"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_trashcan"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/b2"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toEndOf="@+id/b0"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/b2"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_swap"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/b3"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toEndOf="@+id/b1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/b3"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/button_edit"
                android:tag="colorA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".55"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toEndOf="@+id/b2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>