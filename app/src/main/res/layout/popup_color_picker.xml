<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <View
            android:id="@+id/pcp_color"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:background="@drawable/background_round"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="colorB"
                android:text="Hue:"
                android:textSize="12dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/pcp_hue"
                style="@style/slider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:tag="enabled"
                android:value="180"
                android:valueFrom="0"
                android:valueTo="360" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="colorB"
                android:text="Saturation:"
                android:textSize="12dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/pcp_saturation"
                style="@style/slider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:tag="enabled"
                android:value="0.01"
                android:valueFrom="0"
                android:valueTo="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_val_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:tag="colorB"
                android:text="Value:"
                android:textSize="12dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/pcp_value"
                style="@style/slider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:tag="enabled"
                android:value="0.01"
                android:valueFrom="0"
                android:valueTo="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pcp_deny"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_text"
                android:paddingHorizontal="30dp"
                android:tag="colorC"
                android:text="CANCEL"
                android:textSize="12dp" />

            <Button
                android:id="@+id/pcp_confirm"
                style="@style/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/button_text"
                android:paddingHorizontal="30dp"
                android:tag="colorA"
                android:text="CONFIRM"
                android:textSize="12dp" />

        </LinearLayout>

        <View
            android:id="@+id/padding"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

    </LinearLayout>

</FrameLayout>